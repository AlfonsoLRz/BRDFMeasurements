::begin shader

vec3 BRDF( vec3 L, vec3 N, vec3 V, vec3 X, vec3 Y )
{
	vec3 H = normalize(L + V);
	float NdotL = max(pow(dot(N, H), 4.0f), .1f);
	float Rs = 0.0;
	
	return N * NdotL;
}

::end shader
